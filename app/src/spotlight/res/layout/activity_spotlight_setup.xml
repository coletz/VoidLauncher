<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@color/default_bg_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/default_text_color"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/overlay_permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="32dp"
        android:text="Grant Overlay Permission"
        />

    <Button
        android:id="@+id/accessibility_permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="32dp"
        android:text="Enable Accessibility Service"
        />

    <Button
        android:id="@+id/app_settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="32dp"
        android:text="App Settings"
        />

    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Ctrl+Space anywhere to open Void Spotlight"
        android:textSize="14sp"
        android:textColor="@color/default_text_color"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3" />

</LinearLayout>
